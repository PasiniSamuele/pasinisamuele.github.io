---
layout: default
---
<!-- _layouts/services.html -->
<div class="post">

  <header class="post-header">
    <h1 class="post-title">{{ page.title }} {% if page.cv_pdf %}<a href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url}}" target="_blank" rel="noopener noreferrer" class="float-right"><i class="fas fa-file-pdf"></i></a>{% endif %}</h1>
      {% if page.description %}<p class="post-description">{{ page.description }}</p>{% endif %}
  </header>

  <article>
    <div class="cv">
      {% for entry in site.data.courses %}
        <a class="anchor" id="{{ entry.title }}"></a>
       
        <div class="card mt-3 p-3">
         
          <div>
            <h3 class="card-title font-weight-medium">{{ entry.title }}</h3>
            {% if entry.material %}            <a
              href="{{ entry.material | prepend: 'assets/zips/' | relative_url}}"
              target="_blank"
              rel="noopener noreferrer"
              class="float-right"
              ><i class="fa-solid fa-file-zipper"></i
            ></a>
              {% endif %}
          {% if entry.type == "list" %}
            {% include cv/list.liquid %}
          {% elsif entry.type == "map" %}
            {% include cv/map.liquid %}
          {% elsif entry.type == "nested_list" %}
            {% include cv/nested_list.liquid %}
          {% elsif entry.type == "time_table" %}
            {% include cv/time_table.liquid %}
          {% elsif entry.type == "time_table_teaching" %}
            {% include cv/time_table_teaching.liquid %}
          {% elsif entry.type == "list_groups" %}
            {% include cv/list_groups.liquid %}
          {% else %}
            {{ entry.contents }}
          {% endif %}
          </div>
        </div>
      {% endfor %}
      </div>
  </article>

</div>
